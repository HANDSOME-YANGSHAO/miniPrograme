.searchContainer {
  padding: 0 20rpx;
}
/* 搜索头部 */
.header {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  padding: 10rpx 0;
}
.searchInput {
  display: flex;
  height: 100%;
  flex: 1;
  background-color: rgba(237,237,237,0.4);
  border-radius: 20rpx;
}
.searchInput input {
  height: 100%;
  margin-left: 20rpx;
}
.cancel {
  width: 100rpx;
  text-align: center;
}
.inputPlaceholder {
  font-size: 28rpx;
}


/* 热搜榜单 */
.title {
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(141, 130, 130, 0.5);
}
.hotSearchList {
  display: flex;
  flex-wrap: wrap;
}
.order {
  margin: 0 10rpx;
}
.hotSearchListItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
}
.hotListItemImage {
  margin-left: 10rpx;
  width: 38rpx;
  height: 25rpx;
}

/* 搜索列表*/
.searchContent {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: rgba(141, 130, 130, 0.5);
  border-bottom: 1rpx solid rgba(141, 130, 130, 0.8);
}
.searchList .searchListItem {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.searchListItem .content{
  font-size: 28rpx;
  margin-left: 10rpx;
  flex: 1;
}

/* 历史记录 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
}
.historyTitle {
  font-size: 26rpx;
}
.historyItem {
  font-size: 24rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
  padding: 5rpx 15rpx;
  background-color: #ededed;
  border-radius: 10rpx;
}
.delete {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
}